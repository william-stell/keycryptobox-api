  },
  "repository": {
    "type": "git",
    "url": "https://github.com/william-stell/keycryptobox-api.git"
  },
  "bugs": {
    "url": "https://github.com/william-stell/keycryptobox-api/issues"
  },
  "homepage": "https://github.com/william-stell/keycryptobox-api#readme",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@noble/curves": "^1.9.2",
    "hono": "^4.7.11"
  }
}
